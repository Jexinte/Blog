{% extends "layout.twig" %}


{% block icon_img %}
	<link rel="icon" type="image/png" href="../public/favicon.ico"/>
{% endblock %}

{% block title %}
	<title>
		Article - Blog professionnel
		
	</title>
{% endblock %}
{% block css_page %}
	<link rel="stylesheet" href="../public/assets/css/article.css">
{% endblock %}

{% block content %}
	{% include "menu_article.twig" %}

	<div class="container-fluid" id="article">
	
			<img class="article-banner" src="{{article.image is defined ? article.image : default.image}}" alt="Climbing to the top">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 article">
					<article>
						<div class="author-box">
							<img class="author-img" src="{{article.author_image is defined ? article.author_image : default.author_image}}" alt="avatar author1">
							<h2 class="author-name">{{article.author is defined ? article.author : default.author}}</h2>
						</div>

						<h1 class="article-title" id="h1">{{article.title is defined ? article.title : default.title}}</h1>
						<p class="article-short-phrase">{{article.short_phrase is defined ? article.short_phrase : default.short_phrase}}</p>
						<p class="article-content">{{article.content is defined ? article.content|nl2br : default.content }}</p>
						<ul class="tags">
							<li class="tag">{{article.tags is defined ? article.tags : default.tags}}</li>
						</ul>
						<p class="article-date">{{article.date_of_publication is defined ? article.date_of_publication : default.date_of_publication}}</p>
					</article>
				

			</div>
		</div>
	</div>

	<div
		class="container-fluid" id="comment">
		{# La logique pour afficher un paragraphe disant qu'il faut être connecté arrivera plus tard #}
		<h2 class="h2" id="comment-main-title">Ajouter un commentaire</h2>

		<form action="?action=add_comment&amp;idArticle={{article.id is defined ? article.id : default.id}}" method="post">
			<textarea name="comment" id="feedback" cols="30" rows="10" value="{{default.comment_failed is defined ? default.comment_failed : ''}}"></textarea>
			<input type="text" name="id_article" value = {{article.id is defined ? article.id : default.id}} hidden>
			<p class="text-success">{# Afficher un message de confirmation d'envoi#}</p>
			<p class="text-danger" id="comment-error">{{comment_exception is defined ? comment_exception : ''}}</p>
			<div class="command-box">
				<input class="btn btn-dark command" name="submit" type="submit" value="Envoyer">
			</div>

		</form>
	</div>

	<div class="container-fluid" id="comments">
		<h2 class="h2">Commentaires</h2>
		<div class="row">
			<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 comments">
				<div class="author-box">
					<img src="../public/assets/images/author_1.jpg" alt="author comment img">
					<h3 class="author-name">Test ,
						<span class="date-comment">le 14 juin 2023</span>
					</h3>
					<p class="author-comment">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Tenetur natus similique, dolor fugit, neque facilis molestiae error consequatur corporis, a nulla quisquam vero laudantium molestias. Mollitia id autem possimus alias!</p>
				</div>


			</div>
		</div>
	</div>
{% endblock %}

